<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence">
	<properties>
		<property name="hibernate.connection.provider_class">org.hibernate.connection.DatasourceConnectionProvider
		</property>
	</properties>
	<persistence-unit name="manager1" transaction-type="RESOURCE_LOCAL">
		<properties>
			<property name="hibernate.connection.provider_class">org.hibernate.connection.DatasourceConnectionProvider
			</property>
			<property name="hibernate.ejb.cfgfile" value="/hibernate.cfg.xml" />
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"></property>
			<property name="javax.persistence.jdbc.url" value="jdbc:derby:etrade;create=true"></property>
			<property name="javax.persistence.jdbc.user" value="sa"></property>
		</properties>
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
	</persistence-unit>
</persistence>
